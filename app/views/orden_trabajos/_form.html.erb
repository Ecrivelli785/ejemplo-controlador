<% if params[:controller] === 'orden_trabajos' %>
    <%= form_with model: @orden_trabajo, id: "orden_trabajo_form" do |f| %>
        <%= render 'orden_trabajos/form-fields', f: f %>
    <% end %>
<% else %>
    <%= form_with model: @orden_trabajo, local: true  do |f| %>
        <%= render 'shared/validation-messages', object: f.object %>
        <%= render 'orden_trabajos/form-fields', f: f %>
    <% end %>
<% end %>




