$(document).on('change',".index-orden_trabajo-post", function(){
var orden_trabajoid = $(this).attr("orden_trabajoid");
var value    = $(this).val();
$.ajax({
        type: "POST",
        url: '/orden_trabajos/' + orden_trabajoid + '',
        data: {post:value },
        success: function(){
            $(this).hide;
        }
  });
